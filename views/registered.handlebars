{{!-- nav --}}
  <nav class="navbar navbar-dark bg-dark">
    <a class="navbar-brand menu-link" id="login-menu"  href="/logout">Logout</a>
    <div class="navbar-brand">
      <a id="title" href="/">YouF&#128125;</a>
    </div>
    <form class="form-inline">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button id="search-btn" class="btn my-2 my-sm-0 all-sightings" type="submit" href="/api/sightings">Search</button>
    </form>
  </nav>
  {{!-- welcome message --}}
<br>
<div class=" container  d-flex justify-content-center" >
  <div id="welcome" class="row">
    <div class="col-md-12 col-md-offset-3">
      <h2>Welcome, <span class="member-name"></span></h2>
      <br>
      <button id="favs" type="submit" class="btn btn-default">My Favorites</button>
    </div>
  </div>
</div>
<br>
{{!-- table --}}

<table id="table" class=" container table table-hover table-success table-striped table-bordered">
  <thead >
    <tr>
      <th scope="col">#</th>
      <th scope="col">Date</th>
      <th scope="col">Time</th>
      <th scope="col">City</th>
      <th scope="col">State</th>
      <th scope="col">Country</th>
      <th scope="col">Shape</th>
      <th scope="col">Duration</th>
      <th scope="col">Description</th>
    </tr>
    {{#each data}}
  <tbody>
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{ this.Date }}</td>
      <td>{{ this.Time }}</td>
      <td>{{ this.City }}</td>
      <td>{{ this.State }}</td>
      <td>{{ this.Country }}</td>
      <td>{{ this.Shape }}</td>
      <td>{{ this.Duration }}</td>
      <td>{{ this.Description }}</td>
    </tr>
  </tbody>
  {{/each}}
  </thead>
</table>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>
  $(document).ready(function () {
    // This file just does a GET request to figure out which user is logged in
    // and updates the HTML on the page
    $.get("/api/user_data").then(function (data) {
      $(".member-name").text(data.firstName + " !");
    });
  }) 
</script>